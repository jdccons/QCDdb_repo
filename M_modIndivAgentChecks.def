Option Compare Database

Public Function CheckInvPriAgt(strSubID As String) As Boolean

    Dim strSQL As String
    Dim dbs As DAO.Database
    Dim rst As DAO.Recordset
    
    Set dbs = CurrentDb()
    
    strSQL = "SELECT tblSubscr.SubID, tblInvAgt.AGENTid, tblInvAgt.Primary " & _
             "FROM tblSubscr INNER JOIN tblInvAgt ON tblSubscr.SubID = tblInvAgt.SubscrID " & _
             "WHERE (((tblSubscr.SubID)='" & strSubID & "') AND ((tblInvAgt.Primary)=True));"
    
    Set rst = dbs.OpenRecordset(strSQL, dbOpenSnapshot)
    If rst.RecordCount > 0 Then
        CheckInvPriAgt = True
    Else
        CheckInvPriAgt = False
    End If

    rst.Close
    Set dbs = Nothing
    
End Function

